{
    "name": "endicia",
    "label": "Endicia Package",
    "dependencies": [
        {
            "type": "service",
            "name": "http",
            "version": "v1.8.5"
        }
    ],
    "configuration": [
        {
            "name": "endiciaApi",
            "label": "Endicia API",
            "required": true,
            "defaultValue": "apiSoap",
            "type": "buttonsGroup",
            "typeOptions": {
                "allowCustom": false,
                "possibleValues": [
                    {
                        "label": "Endicia Label Server API (SOAP)",
                        "name": "apiSoap"
                    },
                    {
                        "label": "Stamps.com/Endicia API (REST)",
                        "name": "apiRest"
                    }
                ]
            }
        },
        {
            "label": "Endicia Label Server API URL (SOAP)",
            "name": "SOAP_API_BASE_URL",
            "type": "buttonsGroup",
            "required": "config.endiciaApi == 'apiSoap'",
            "visibility": "config.endiciaApi == 'apiSoap'",
            "defaultValue": "sandbox",
            "typeOptions": {
                "allowCustom": true,
                "possibleValues": [
                    {
                        "label": "Sandbox",
                        "name": "https://elstestserver.endicia.com/LabelService/EwsLabelService.asmx?wsdl"
                    }
                ]
            }
        },
        {
            "label": "Stamps.com/Endicia API URL (REST)",
            "name": "REST_API_BASE_URL",
            "type": "buttonsGroup",
            "required": "config.endiciaApi == 'apiRest'",
            "visibility": "config.endiciaApi == 'apiRest'",
            "defaultValue": "sandbox",
            "typeOptions": {
                "allowCustom": false,
                "possibleValues": [
                    {
                        "label": "Sandbox",
                        "name": "https://api.testing.stampsendicia.com/sera"
                    },
                    {
                        "label": "Production",
                        "name": "https://api.stampsendicia.com/sera"
                    }
                ]
            }
        },
        {
            "name": "clientId",
            "label": "Client ID",
            "type": "text",
            "required": "config.endiciaApi == 'apiRest'",
            "visibility": "config.endiciaApi == 'apiRest'"
        },
        {
            "name": "clientSecret",
            "label": "Client secret",
            "type": "text",
            "required": "config.endiciaApi == 'apiRest'",
            "visibility": "config.endiciaApi == 'apiRest'"
        },
        {
            "name": "codeVerifier",
            "label": "Code Verifier",
            "type": "text",
            "required": "config.endiciaApi == 'apiRest'",
            "visibility": "config.endiciaApi == 'apiRest'",
            "description": "A random 43-128 character used to connect the authorization request to the token request"
        },
        {
            "name": "requestToken",
            "label": "Request Token",
            "type": "oauth2",
            "typeOptions": {
                "clientId": "config.clientId",
                "clientSecret": "config.clientSecret",
                "codeVerifier": "config.codeVerifier",
                "authUrl": "'https://signin.stampsendicia.com/authorize'",
                "accessTokenUrl": "'https://signin.stampsendicia.com/oauth/token'",
                "scope": "'offline_access'",
                "grantType": "'authorization_code'",
                "accessToken": "config.accessToken",
                "refreshToken": "config.refreshToken"
            },
            "visibility": "config.endiciaApi == 'apiRest'"
        },
        {
            "name": "accessToken",
            "label": "Access Token",
            "type": "text",
            "visibility": "config.endiciaApi == 'apiRest'"
        },
        {
            "name": "refreshToken",
            "label": "Refresh Token",
            "type": "text",
            "visibility": "config.endiciaApi == 'apiRest'"
        },
        {
            "name": "accountNumber",
            "label": "Account Number",
            "type": "text",
            "required": "config.endiciaApi == 'apiSoap'",
            "visibility": "config.endiciaApi == 'apiSoap'"
        },
        {
            "name": "passphrase",
            "label": "Passphrase",
            "type": "password",
            "required": "config.endiciaApi == 'apiSoap'",
            "visibility": "config.endiciaApi == 'apiSoap'"
        },
        {
            "name": "requesterId",
            "label": "Requester ID",
            "type": "text",
            "required": "config.endiciaApi == 'apiSoap'",
            "visibility": "config.endiciaApi == 'apiSoap'"
        },
        {
            "name": "oauthCallback",
            "label": "OAuth Callback",
            "description": "The OAuth callback to configure in your Endicia App",
            "type": "label",
            "value": "config.SERVER_URL + '/' + config.ENV + '/runtime/callback'",
            "visibility": "config.endiciaApi == 'apiRest'"
        }
    ],
    "events": [
    ],
    "metadata": [
        {
            "type": "script",
            "namespace": "api",
            "path": "/scripts/api.js"
        },
        {
            "type": "script",
            "namespace": "utils",
            "path": "/scripts/utils.js"
        }
    ]
}