{
    "name": "endicia",
    "label": "Endicia Package",
    "dependencies": [
        {
            "type": "service",
            "name": "http",
            "version": "v1.3.7",
            "instanceId": "shared"
        }
    ],
    "configuration": [
        {
            "name": "clientId",
            "label": "Client ID",
            "type": "text",
            "required": "true"
        },
        {
            "name": "clientSecret",
            "label": "Client secret",
            "type": "text",
            "required": "true"
        },
        {
            "name": "codeVerifier",
            "label": "Code Verifier",
            "type": "text",
            "required": "true",
            "description": "A random 43-128 character used to connect the authorization request to the token request"
        },
        {
            "name": "requestToken",
            "label": "Request token",
            "type": "oauth2",
            "typeOptions": {
                "clientId": "config.clientId",
                "clientSecret": "config.clientSecret",
                "codeVerifier": "config.codeVerifier",
                "authUrl": "'https://signin.stampsendicia.com/authorize'",
                "accessTokenUrl": "'https://signin.stampsendicia.com/oauth/token'",
                "scope": "'offline_access'",
                "grantType": "'authorization_code'",
                "accessToken": "@config.accessToken",
                "refreshToken": "@config.refreshToken"
            }
        },
        {
            "name": "accessToken",
            "label": "Access token",
            "type": "text"
        },
        {
            "name": "refreshToken",
            "label": "Refresh token",
            "type": "text"
        },
        {
            "name": "webhook",
            "label": "Webhook URL",
            "type": "label",
            "value": "config.WEBHOOK_URL"
        },
        {
            "name": "oauthCallback",
            "label": "OAuth callback",
            "description": "The OAuth callback to configure in your Endicia App",
            "type": "label",
            "value": "config.SERVER_URL + '/' + config.ENV + '/runtime/callback'"
        },
        {
            "name": "ENDICIA_API_BASE_URL",
            "label": "Endicia Api Url",
            "type": "label",
            "value": "https://api.stampsendicia.com/sera/v1"
        }
    ],
    "events": [
        {
            "label": "Webhook",
            "name": "webhook",
            "description": "Event triggered when there is a webhook coming from Endicia."
        },
        {
            "label": "Callback",
            "name": "callback",
            "description": "Happens when a async process is finished"
        }
    ],
    "metadata": [
        {
            "type": "script",
            "namespace": "api",
            "path": "/scripts/api.js"
        },
        {
            "type": "flowStep",
            "namespace": "apiCallEndicia",
            "path": "/flowSteps/apiCallEndicia"
        },
        {
            "type": "uiService",
            "namespace": "testUiService",
            "path": "/uiServices/testUiService"
        }
    ]
}