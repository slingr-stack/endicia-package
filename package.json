{
    "name": "endicia",
    "label": "Endicia Package",
    "dependencies": [
        {
            "type": "service",
            "name": "http",
            "version": "v1.8.5"
        }
    ],
    "configuration": [
        {
            "name": "endiciaApi",
            "label": "Endicia API",
            "required": true,
            "defaultValue": "apiSoap",
            "type": "buttonsGroup",
            "typeOptions": {
                "allowCustom": false,
                "possibleValues": [
                    {
                        "label": "Endicia Label Server API (SOAP)",
                        "name": "apiSoap"
                    },
                    {
                        "label": "Stamps.com/Endicia API (REST)",
                        "name": "apiRest"
                    }
                ]
            }
        },
        {
            "label": "SOAP_API_BASE_URL",
            "name": "Endicia Label Server API URL (SOAP)",
            "type": "buttonsGroup",
            "required": "@config.endiciaApi == 'apiSoap' ? 'true' : 'false'",
            "visible": "@config.endiciaApi == 'apiSoap' ? 'true' : 'false'",
            "defaultValue": "sandbox",
            "typeOptions": {
                "allowCustom": true,
                "possibleValues": [
                    {
                        "label": "Sandbox",
                        "name": "https://elstestserver.endicia.com/LabelService/EwsLabelService.asmx?wsdl"
                    }
                ]
            }
        },
        {
            "label": "REST_API_BASE_URL",
            "name": "Stamps.com/Endicia API URL (REST)",
            "type": "buttonsGroup",
            "required": "@config.endiciaApi == 'apiRest' ? 'true' : 'false'",
            "visible": "@config.endiciaApi == 'apiRest' ? 'true' : 'false'",
            "defaultValue": "sandbox",
            "typeOptions": {
                "allowCustom": true,
                "possibleValues": [
                    {
                        "label": "Sandbox",
                        "name": "https://api.testing.stampsendicia.com/sera"
                    },
                    {
                        "label": "Production",
                        "name": "https://api.stampsendicia.com/sera"
                    }
                ]
            }
        },
        {
            "name": "clientId",
            "label": "Client ID",
            "type": "text",
            "required": "@config.endiciaApi == 'apiRest' ? 'true' : 'false'",
            "visible": "@config.endiciaApi == 'apiRest' ? 'true' : 'false'"
        },
        {
            "name": "clientSecret",
            "label": "Client secret",
            "type": "text",
            "required": "@config.endiciaApi == 'apiRest' ? 'true' : 'false'",
            "visible": "@config.endiciaApi == 'apiRest' ? 'true' : 'false'"
        },
        {
            "name": "codeVerifier",
            "label": "Code Verifier",
            "type": "text",
            "required": "@config.endiciaApi == 'apiRest' ? 'true' : 'false'",
            "visible": "@config.endiciaApi == 'apiRest' ? 'true' : 'false'",
            "description": "A random 43-128 character used to connect the authorization request to the token request"
        },
        {
            "name": "requestToken",
            "label": "Request token",
            "type": "oauth2",
            "typeOptions": {
                "clientId": "config.clientId",
                "clientSecret": "config.clientSecret",
                "codeVerifier": "config.codeVerifier",
                "authUrl": "'https://signin.stampsendicia.com/authorize'",
                "accessTokenUrl": "'https://signin.stampsendicia.com/oauth/token'",
                "scope": "'offline_access'",
                "grantType": "'authorization_code'",
                "accessToken": "@config.accessToken",
                "refreshToken": "@config.refreshToken"
            },
            "visible": "@config.endiciaApi == 'apiRest' ? 'true' : 'false'"
        },
        {
            "name": "accessToken",
            "label": "Access token",
            "type": "text",
            "visible": "@config.endiciaApi == 'apiRest' ? 'true' : 'false'"
        },
        {
            "name": "refreshToken",
            "label": "Refresh token",
            "type": "text",
            "visible": "@config.endiciaApi == 'apiRest' ? 'true' : 'false'"
        },
        {
            "name": "accountNumber",
            "label": "Account Number",
            "type": "text",
            "required": "@config.endiciaApi == 'apiSoap' ? 'true' : 'false'",
            "visible": "@config.endiciaApi == 'apiSoap' ? 'true' : 'false'"
        },
        {
            "name": "passphrase",
            "label": "Passphrase",
            "type": "password",
            "required": "@config.endiciaApi == 'apiSoap' ? 'true' : 'false'",
            "visible": "@config.endiciaApi == 'apiSoap' ? 'true' : 'false'"
        },
        {
            "name": "requesterId",
            "label": "Requester ID",
            "type": "text",
            "required": "@config.endiciaApi == 'apiSoap' ? 'true' : 'false'",
            "visible": "@config.endiciaApi == 'apiSoap' ? 'true' : 'false'"
        },
        {
            "name": "oauthCallback",
            "label": "OAuth callback",
            "description": "The OAuth callback to configure in your Endicia App",
            "type": "label",
            "value": "config.SERVER_URL + '/' + config.ENV + '/runtime/callback'",
            "visible": "@config.endiciaApi == 'apiRest' ? 'true' : 'false'"
        }
    ],
    "events": [
        {
            "label": "Webhook",
            "name": "webhook",
            "description": "Event triggered when there is a webhook coming from Endicia."
        },
        {
            "label": "Callback",
            "name": "callback",
            "description": "Happens when a async process is finished"
        }
    ],
    "metadata": [
        {
            "type": "script",
            "namespace": "api",
            "path": "/scripts/api.js"
        },
        {
            "type": "script",
            "namespace": "utils",
            "path": "/scripts/utils.js"
        }
    ]
}