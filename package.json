{
    "name": "endicia",
    "label": "Endicia Package",
    "dependencies": [
        {
            "type": "service",
            "name": "http",
            "version": "v1.3.7",
            "instanceId": "shared"
        },
        {
            "type": "package",
            "name": "oauth",
            "version": "v1.0.19"
        }
    ],
    "configurationBuilder": "/configurationBuilder.js",
    "configuration": [
        {
            "label": "Configuration id",
            "description": "Id used to store tokens",
            "name": "id",
            "type": "text"
        },
        {
            "label": "Auth URL",
            "name": "authUrl",
            "type": "text"
        },
        {
            "label": "Access Token URL",
            "name": "accessTokenUrl",
            "type": "text"
        },
        {
            "label": "Client Id",
            "name": "clientId",
            "type": "text"
        },
        {
            "label": "Client Secret",
            "name": "clientSecret",
            "type": "text"
        },
        {
            "label": "Scope",
            "name": "scope",
            "type": "text"
        },
        {
            "label": "State",
            "name": "state",
            "type": "text"
        },
        {
            "name": "oauthCallback",
            "label": "OAuth callback",
            "description": "The OAuth callback to configure in your Endicia App",
            "type": "label",
            "value": "config.AUTH_CALLBACK_URL+'/authCallback'"
        },
        {
            "name": "webhooksUrl",
            "label": "Webhooks URL",
            "description": "The URL to configure in webhooks of your Endicia App",
            "type": "label",
            "value": "@config.WEBHOOK_URL"
        },
        {
            "name": "ENDICIA_API_BASE_URL",
            "label": "Endicia Api Url",
            "type": "label",
            "value": "https://api.stampsendicia.com/sera"
        }
    ],
    "events": [
        {
            "label": "Webhook",
            "name": "webhook",
            "description": "Happens when Endicia sends a webhook to the package."
        },
        {
            "label": "User connected to endcicia",
            "name": "userConnected",
            "description": "Happens when a user successfully connects to endicia ."
        }
    ],
    "metadata": [
        {
            "type": "script",
            "namespace": "api",
            "path": "/scripts/api.js"
        },
        {
            "type": "flowStep",
            "namespace": "apiCallEndicia",
            "path": "/flowSteps/apiCallEndicia"
        },
        {
            "type": "uiService",
            "namespace": "testUiService",
            "path": "/uiServices/testUiService"
        }
    ]
}